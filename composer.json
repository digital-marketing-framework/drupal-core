{
    "name": "digital-marketing-framework/drupal-core",
    "description": "Anyrel core integration for Drupal",
    "license": "GPL-2.0-or-later",
    "type": "drupal-module",
    "keywords": [
        "Drupal",
        "module",
        "marketing",
        "framework",
        "data",
        "relay",
        "distribution",
        "distributor",
        "collector"
    ],
    "authors": [
        {
            "name": "Mediatis AG",
            "email": "info@mediatis.de",
            "homepage": "https://www.mediatis.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.mediatis.de",
    "require": {
        "php": "^8.1",
        "digital-marketing-framework/core": "^3.5.3",
        "drupal/core": "^10 || ^11"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\dmf_core\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": ".Build/web/"
            }
        },
        "installer-name": "dmf_core",
        "installer-paths": {
            ".Build/web/core": [
                "type:drupal-core"
            ],
            ".Build/web/libraries/{$name}": [
                "type:drupal-library"
            ],
            ".Build/web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            ".Build/web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            ".Build/web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        }
    }
}
